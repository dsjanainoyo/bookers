<h1>Books</h1>

<%@books.each do |book|%>
  <%=book.title%>
  
   <%=book.body%>
 


  <ul>
      <li><%=link_to "Show",book_path(book.id)%></li>
      <li><%=link_to "Edit",edit_book_path(book.id)%></li>
      <li><%=link_to "Destroy",destroy_book_path(book.id),method: :delete,"data-confirm"=>"Are you sure?"%></li>
      
  </ul>
<%end%>

<h2>New book</h2>
<%= form_with model:@book do |f|%>
<p>Title</p>
<%=f.text_field:title%>
<p>Body</p>
<%=f.text_area:body%>

<%=f.submit'Create Book'%>
<%end%>